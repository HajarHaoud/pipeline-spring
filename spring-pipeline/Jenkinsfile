pipeline {
	agent any

	environment {
		DOCKER_IMAGE = "hajarhaoud/spring-app"
		DOCKER_HUB_CREDS = 'dockerhub-creds'
	}

	stages {
		stage('Checkout Code') {
			steps {
				git branch: 'main', url: 'https://github.com/HajarHaoud/pipeline-spring.git'
			}
		}

		stage('Build Artifact') {
			steps {
				dir('spring-pipeline'){
					sh 'mvn clean package -DskipTests'
				}
			}
		}

		stage('3. Build & Push Docker') {
			steps {
				dir('spring-pipeline') {
					script {
						// Juste build pour tester
						sh 'docker build -t test-image .'
						echo "✅ Build Docker réussi (push désactivé pour test)"
					}
				}
			}
		}

		stage('Deploy to K8s') {
			steps {
				dir('spring-pipeline'){
					// On utilise kubectl pour mettre à jour l'image
					sh "kubectl apply -f k8s/deployment.yaml"
					sh "kubectl set image deployment/spring-app spring-app=${DOCKER_IMAGE}:${env.BUILD_ID}"
				}

			}
		}
	}
}